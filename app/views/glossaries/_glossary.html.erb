<div class="box col3 text-center">
    <h3><%= glossary.topic %></h3>
    <p><%= pluralize(glossary.terms.count, "term") %> | <%= glossary.language.name %></p>
    <div class="row">
      <div class="col-sm-6">
        <%= link_to '#' do %>
          <p><%= fa_icon 'user' %> <%= glossary.user.name %></p>
        <% end %>
      </div>
      <div class="col-sm-6">
        <%= link_to '#' do %>
          <p><%= fa_icon 'users' %> <%= pluralize(contributor_count(glossary), 'contributor') %></p>
        <% end %>
      </div>
    </div>
    <table class="table table-condensed">
      <th>Terms</th>
      <th>Translations</th>
      <% glossary.terms.each do |term| %>
        <tr>
          <td><%= term.content %></td>
          <td><%= fa_icon 'globe' %> <%= pluralize(term.translations.count, 'language') %></td>
        </tr>
      <% end %>
    </table>

</div>