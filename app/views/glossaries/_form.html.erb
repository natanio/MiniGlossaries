<%= simple_form_for(@glossary, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :topic, placeholder: 'A descriptive topic' %>
    <div class="form-group">
      <%= f.label :language_id, 'What is the base language?' %>
      <%= f.select(:language_id, Language.pluck(:name, :id), {}, { class: 'form-control' }) %>
    </div>
    <%= f.input :description, placeholder: 'Enter a short description about what kind of terms are in this glossary.' %>
    <div class="form-group">
      <%= f.label :terms, 'What terms are in this glossary?' %>
      <%= text_field_tag :terms, params[:terms], id: 'terms', placeholder: 'Enter 3-5 terms, comma separated', class: 'form-control' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
